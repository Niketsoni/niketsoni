@{
    ViewData["Title"] = "Contact";
    Layout = "_Layout2";
}
<div class="section-container">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="section-container-spacer text-center">
                    <h1 class="h2">04 : Contact me</h1>
                </div>

                <div class="row">
                    <div class="col-md-10 col-md-offset-1">
                        <form action="" id="contact-form" class="reveal-content">
                            <div class="row">
                                <div class="col-md-7">
                                    <div class="form-group">
                                        <input type="email" class="form-control" id="email" placeholder="Email">
                                    </div>
                                    <div class="form-group">
                                        <input type="text" class="form-control" id="subject" placeholder="Subject">
                                    </div>
                                    <div class="form-group">
                                        <textarea class="form-control" rows="5" id="message" placeholder="Enter your message"></textarea>
                                    </div>
                                    <button class="btn btn-default btn-lg g-recaptcha" data-sitekey="6LfZmjwaAAAAAJDQ7Myozm21eNzIRKaJwbVrAqSK" data-callback='onSubmit'>Send</button>
                                </div>
                                <div class="col-md-5 address-container">
                                    <ul class="list-unstyled">
                                        <li>
                                            <span class="fa-icon">
                                                <i class="fa fa-phone" aria-hidden="true"></i>
                                            </span>
                                            +91 8109840267
                                        </li>
                                        <li>
                                            <span class="fa-icon">
                                                <i class="fa fa-at" aria-hidden="true"></i>
                                            </span>
                                            soni.niket29@gmail.com
                                        </li>
                                        <li>
                                            <span class="fa-icon">
                                                <i class="fa fa fa-map-marker" aria-hidden="true"></i>
                                            </span>
                                            Bengaluru, India
                                        </li>
                                    </ul>
                                    <h3>Follow me on social networks</h3>
                                    <a href="https://www.facebook.com/niketsoni76/" target="_blank" title="" class="fa-icon">
                                        <i class="fa fa-facebook"></i>
                                    </a>
                                    <a href="https://twitter.com/NiketSoni_18" target="_blank" title="" class="fa-icon">
                                        <i class="fa fa-twitter"></i>
                                    </a>
                                    <a href="https://www.linkedin.com/in/niketsoni18" target="_blank" title="" class="fa-icon">
                                        <i class="fa fa-linkedin"></i>
                                    </a>

                                </div>
                            </div>
                        </form>
                    </div>

                </div>

            </div>
        </div>
    </div>
</div>
@section Scripts
{
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>
    <script>
        function onSubmit(token) {
            var obj = {
                name: $('#subject').val(),
                email: $('#email').val(),
                phone: $('#subject').val(),
                description: $('#message').val(),
            };
            $.ajax({
                type: "POST",
                contentType: "application/json; charset=utf-8",
                url: '/api/RequestDemo',
                data: JSON.stringify(obj),
                success: function (response) {
                    location.reload();
                }, 
            });
        }
    </script>
}